@page "/global-configuration"
@inherits BasePage

<div class="card">
    <div class="card-header">
        <h5 class="card-title">Global Configuration</h5>
        <p class="card-text">This is where you can configure the global settings for the application.</p>
    </div>
    <div class="card-body">
        <EditForm Model="_model" OnSubmit="HandleSubmit">
            <DataAnnotationsValidator/>

            <div class="mb-3">
                <label class="form-label">Culture</label>
                <MultiSelect Items="_locales" SelectedValue="@_model.CurrentCulture" Callback="(val) => { _model.CurrentCulture = val; }"></MultiSelect>
                <InputText @bind-Value="_model.CurrentCulture" hidden />
                <ValidationMessage For="() => _model.CurrentCulture"/>
            </div>
            
            <div class="mb-3">
                <label class="form-label">NAPI Endpoint</label>
                <InputText @bind-Value="_model.NapiEndpoint" class="form-control"/>
                <ValidationMessage For="() => _model.NapiEndpoint"/>
            </div>

            <div class="mb-3">
                <label class="form-label">NAPI AuthUserName</label>
                <InputText @bind-Value="_model.NapiAuthUserName" class="form-control"/>
                <ValidationMessage For="() => _model.NapiAuthUserName"/>
            </div>

            <div class="mb-3">
                <label class="form-label">NAPI AuthPassword</label>
                <InputText @bind-Value="_model.NapiAuthPassword" class="form-control"/>
                <ValidationMessage For="() => _model.NapiAuthPassword"/>
            </div>

            <div class="mb-3">
                
            </div>
            <div class="checkbox mb-3">
                <label class="form-label">
                    <InputCheckbox @bind-Value="_model.EnableDebugButton" /> Enable Debug Button
                </label>
            </div>

            <div class="mb-3 text-center">
                @if (IsLoading)
                {
                    <button class="btn btn-primary disabled" type="submit"><span class="spinner"></span> Loading...</button>
                }
                else
                {
                    <button class="btn btn-primary" type="submit">Save</button>
                }
            </div>
        </EditForm>
    </div>
</div>