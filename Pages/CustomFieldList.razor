@page "/custom-fields"
@inherits BasePage

<div class="card">
    <div class="card-header">
        <h5 class="card-title">Custom Field List</h5>
        <p class="card-text">Use to configure custom fields for the application.</p>
    </div>
    <div class="card-body">
        <ul class="list-group">
            <NavLink class="list-group-item" href="@("custom-fields/global?cultureName=Global")" Match="NavLinkMatch.All">
                <span class="badge">@_globalCustomFieldCount</span>Global
            </NavLink>
            
            @foreach (var (k, v) in _customFieldList)
            {
                if (k == _config.CurrentCulture)
                {
                    <NavLink class="list-group-item active" href="@("custom-fields/" + k + "?cultureName=" + v.Item1)" Match="NavLinkMatch.All">
                        <span class="badge">@v.Item2</span>@v.Item1
                    </NavLink>
                }
                else
                {
                    <NavLink class="list-group-item" href="@("custom-fields/" + k + "?cultureName=" + v.Item1)" Match="NavLinkMatch.All">
                        <span class="badge">@v.Item2</span>@v.Item1
                    </NavLink>
                }
            }
        </ul>
    </div>
</div>