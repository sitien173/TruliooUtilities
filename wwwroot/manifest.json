{
  "manifest_version": 3,
  "name": "Trulioo Extension",
  "description": "My browser extension built with Blazor WebAssembly",
  "version": "1",
  "background": {
    "service_worker": "BackgroundWorker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [ "*://*/*" ],
      "js": ["content/Blazor.BrowserExtension/ContentScript.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "images/icon48.png"
    },
    "default_title": "Trulioo Extension"
  },
  "permissions": [
    "storage",
    "contextMenus",
    "clipboardWrite",
    "activeTab",
    "scripting",
    "tabs",
    "unlimitedStorage"
  ],
  "host_permissions": ["*://*/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "framework/*",
        "content/*",
        "wwwroot/*",
        "app.js",
        "lib/localforage/localforage.min.js",
        "js/chrome-storage-local.js"
      ],
      "matches": [ "*://*/*" ]
    }
  ]
}